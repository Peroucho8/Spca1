<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:descendantFocusability="blocksDescendants"
        android:background="#84b70006">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ADOPTED"
            android:id="@+id/adoptedOverlayTV"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/animalID"
            android:layout_alignEnd="@+id/animalID"
            android:layout_alignBottom="@+id/animalAge"
            android:background="#46000000"
            android:gravity="center"
            android:visibility="invisible"/>

        <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/animalImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/animalName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/animalImage"
            android:layout_toEndOf="@+id/animalImage"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/animalAge"
            android:layout_alignBottom="@+id/animalImage"
            android:layout_toRightOf="@+id/animalImage"
            android:layout_toEndOf="@+id/animalImage"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/animalID"
            android:layout_alignTop="@+id/animalAge"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFav"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#00000000" />


    </RelativeLayout>
    </LinearLayout>